<div class="row">
    <div class="col s12">
        <h3> Edita un color</h3>
    </div>
</div>



<!-- Form -->


<div class="row">
    <div class="card device"></div>

        <form action="/colors/{{color._id}}?_method=PUT" method="POST" class="col s12">
            <!--<input type="hidden" name="_method" value="PUT">-->
            <div class="row">
                    
                    <!--  name -->
                    <div class="input-field row s10">
                        <i class="fa fa-solid fa-palette prefix"></i>
                        <input id="name" name="name" type="text" class="validate" value="{{color.name}}">
                        <label for="name" >Nombre</label>
                    </div>
                    <!--  color -->
                    <div class="input-field row">
                        <div class="col s4 center aling">
                            <i class="fa fa-solid fa-palette prefix"></i>
                            <input type="color" name="rgb" id="rgb" value="{{color.rgb}}">
                        </div>
                    </div>
                    
            </div>
            <div class="row">
                <input type="submit" value="Guardar" class="btn">
                <a href="/allcolors" class="btn orange">Cancelar</a>
            </div>
        </form>
    </div>
</div>